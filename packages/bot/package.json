{
  "name": "@dither-service/bot",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "homepage": "https://dither.chat",
  "scripts": {
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "deploy:telegram": "pnpm dlx @telegram-apps/mate@latest deploy upload",
    "deploy:telegram:info": "pnpm dlx @telegram-apps/mate@latest deploy info",
    "dev:https": "cross-env HTTPS=true vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "build:production": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "ui:add": "pnpm dlx shadcn-vue@latest add"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "@tma.js/sdk-vue": "^1.0.6",
    "@tonconnect/ui": "^2.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eruda": "^3.4.3",
    "lucide-react": "^0.546.0",
    "lucide-vue-next": "^0.507.0",
    "reka-ui": "^2.5.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.12",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-plugin-vue": "^10.5.1",
    "gh-pages": "^6.3.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-mkcert": "^1.17.9",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vue-tsc": "^3.1.1"
  }
}
