{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vitest/importMeta"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "drizzle.config.ts", "db", "drizzle/schema.ts", "drizzle/db.ts"],
  "exclude": ["node_modules", "dist"]
}
